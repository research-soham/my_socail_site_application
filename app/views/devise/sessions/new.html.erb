<div class="container">
  <h2 class="text-center">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
    <div class="form-label-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", required: true %>
    </div>

    <div class="form-label-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control", autocomplete: "current-password", required: true %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="text-center">
        <div class="checkbox mb-3">
          <label >
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </label>
        </div>
      </div>
    <% end %>

    <div class="text-center">
      <div class="form-group">
        <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>