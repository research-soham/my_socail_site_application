<div class="container">shadow
  <div class="container -lg">
    <h2 class="text-center">Create Profile</h2>

    <%= form_for( @profile, html: {class: "form"}) do |f| %>

      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %><br />
      </div>

      <div class="form-group">
        <%= f.label :user_name %><br />
        <%= f.text_field :user_name, autocomplete: "user_name", class: "form-control" %><br />
      </div>

      <div class="form-group">
        <%= f.label :gender %><br />
        <%= f.select :gender, options_for_select(['Male', 'Female']), {}, { class: 'form-control', autocomplete: 'gender' } %><br />
      </div>

      <div class="form-group">
        <%= f.label :mobile %><br />
        <%= f.number_field :mobile, autocomplete: "mobile", class: "form-control" %><br />
      </div>
      
      <div class="form-group">
        <%= f.label :city %><br />
        <%= f.text_field :city, autocomplete: "city", class: "form-control" %><br />
      </div>

      <div class="form-group">
        <%= f.label :date_of_birth %><br />
        <%= f.date_field :date_of_birth, autocomplete: "date_of_birth", class: "form-control" %><br />
      </div>

      <div class="form-group">
        <%= f.label :profile_image %><br />
        <%= f.file_field :profile_image, class: "form-control" %><br />
      </div>

      <div class="text-center"><br>
        <div class="form-group">
          <%= f.submit "Create", class: "btn btn-primary" %> <br /><br />
        </div>
      </div>
    <% end %>
  </div>
</div>
